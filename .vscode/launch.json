    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: conexión remota",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8888
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/custom-addons",
                    "remoteRoot": "/var/lib/odoo/custom-addons"
                },
                {
                    "localRoot": "${workspaceFolder}/odoo",
                    "remoteRoot": "/var/lib/odoo/odoo/addons"
                },
                {
                    "localRoot": "${workspaceFolder}/enterprise",
                    "remoteRoot": "/var/lib/odoo/enterprise"
                },
                {
                    "localRoot": "${workspaceFolder}/deplogv15",
                    "remoteRoot": "/var/lib/odoo/deplogv15"
                },
                {
                    "localRoot": "${workspaceFolder}/DEPLOG_v13",
                    "remoteRoot": "/var/lib/odoo/DEPLOG_v13"
                },
            ],
        }
    ]
}